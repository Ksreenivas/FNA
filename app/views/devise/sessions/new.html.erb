<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>



<br/>
<div class="container">

   <div class="row-fluid">
     <div class="col-lg-5 col-lg-offset-3" style="margin-left:300px">
            <div class="panel panel-default">
             <div class="panel-heading" style="background:#ffffff" ><span><i class="fa fa-user fa-lg"></i> <strong> Sign in</strong></span></div>
                <div class="panel-body">
                    <form class="form-inline" role="form">
                    <div class="form-group">
                        <small><label for="inputEmail3" class="col-sm-3 control-label">
                            Email</label></small>
                        <div class="col-sm-8">
                            <%= f.input :email, :autofocus => true, class: "form-control input-lg", label: false  %>
                        </div>
                    </div>
                    <div class="form-group">
                        <small><label for="inputPassword3" class="col-sm-3 control-label">
                            Password</label></small>
                        <div class="col-sm-8">
                            <%= f.input :password, label: false %>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <% if devise_mapping.rememberable? -%>
                            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                            <% end -%>
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-9">
                              <%= f.button :submit, 'Sign in',  class: "btn btn-default pull-left" %>
                             

                        </div>
                    </div>
                    </form>
                </div>
                <div class="panel-footer"> <%= render "devise/shared/links" %> </div>
            </div>
        </div>
    </div>

</div>

 <% end %>
 




 